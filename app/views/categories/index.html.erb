<h1>Job Categories</h1>

<table class="table table-boldered">  
<thead>
	<tr>
  	<th>Name</th>
  	<th>Desc</th>
  	<th colspan="3"></th>
	</tr>
</thead>

<tbody>
	<% @categories.each do |category| %>
  	<tr>
    	<td><%= category.name %></td>
    	<td><%= category.desc %></td>
    	<td><%= link_to 'View', category %></td>
    	<td><%= link_to 'Edit', edit_category_path(category) %></td>
    	<td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  	</tr>
	<% end %>
</tbody>
</table>

<br>

<button><%= link_to 'New Category', new_category_path %></button>
