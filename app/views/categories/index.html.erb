<h1>Job Categories</h1>

<table class="table table-boldered  table-striped custab">
<thead>
	<tr>
  	<th>Name</th>
  	<th>Desc</th>
  	<th colspan="3"></th>
	</tr>
</thead>

<tbody>
	<% @categories.each do |category| %>
  	<tr>
    	<td><%= category.name %></td>
    	<td><%= category.desc %></td>
    	<td><%= link_to("View", category, :class => "btn btn-xs btn-info") %></td>
    	<td><%= link_to("Edit", edit_category_path(category), :class => "btn btn-xs btn-success") %></td>
    	<td><%= link_to("Delete", category, method: :delete,:class => "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } )%></td>
  	</tr>
	<% end %>
</tbody>
</table>

<button><%= link_to("New Category", new_category_path,:class => "btn btn-xs btn-primary") %></button>
